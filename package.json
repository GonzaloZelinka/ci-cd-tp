{
  "name": "typescript-ci-cd-demo",
  "version": "1.0.0",
  "description": "A basic CI/CD demo project with TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "dev": "ts-node src/index.ts",
    "prebuild": "rm -rf dist",
    "postbuild": "mkdir -p dist && cp public/index.html dist/",
    "deploy": "echo 'Deploying to production...' && npm run build && echo 'Deployment complete!'",
    "setup": "chmod +x scripts/setup.sh && ./scripts/setup.sh"
  },
  "keywords": [
    "typescript",
    "ci-cd",
    "demo"
  ],
  "author": "Personal Account Demo",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.5.0",
    "jest": "^29.6.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  }
}
